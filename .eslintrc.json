{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "globals": {
        "JSX": "readonly"
    },
    "plugins": ["import"],
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
            "typescript": {
                "directory": "./"
            }
        }
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "no-param-reassign": "off",
        "no-await-in-loop": "off",
        "no-restricted-syntax": "off",
        "import/prefer-default-exports": "off",
        "import/extensions": ["error", "never"]
    },
    "overrides": [
        {
            "files": "*/**/*.d.ts",
            "rules": {
                "no-unused-vars": "off",
                "no-use-before-define": "off"
            }
        }
    ],
    "ignorePatterns": "dist/**/*"
}

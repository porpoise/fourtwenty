{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"]
    },
    "overrides": [
        {
            "files": "*/**/*.d.ts",
            "rules": {
                "no-unused-vars": "off",
                "no-use-before-define": "off",
            }
        }
    ]
}

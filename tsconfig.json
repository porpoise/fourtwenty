{
    "compilerOptions": {
        "target": "es2017",

        "jsx": "react-jsx",
        "jsxImportSource": ".",
        
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "forceConsistentCasingInFileNames": true,

        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",

        "strict": true,

        "skipLibCheck": true,

        "newLine": "lf"
    },
    "include": ["src/**/*", "@types/**/*"],
}
